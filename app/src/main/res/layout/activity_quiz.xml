<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.quizPlay.QuizActivity">

    <TextView
        android:id="@+id/quizPageQuestionAttempted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="81dp"
        android:text="quizPageQuestionAttempted"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/quizQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quizPageQuestionAttempted"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Questions"
        android:textAlignment="center"
        android:textColor="#131313"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quizQuestion"
        android:orientation="vertical">

        <Button
            android:id="@+id/option1Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#CC8BDF"
            android:padding="4dp"
            android:text="option1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/option2Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#CC8BDF"
            android:padding="4dp"
            android:text="option2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/option3Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#CC8BDF"
            android:padding="4dp"
            android:text="option3"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/option4Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#CC8BDF"
            android:padding="4dp"
            android:text="option4"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>